.z-button {
  display: inline-block;
  min-height: 40px;
  outline: none;
  border: #f00;
  user-select: none;
  padding: 0 15px;
  border-radius: 5px;
}

.z-button [class*="z-icon-"] {
  vertical-align: middle;
}

.z-button [class*="z-icon-"] + span {
  margin-left: 5px;
}

.z-button.is-disabled {
  cursor: not-allowed;
}

.z-button.is-round {
  border-radius: 20px;
}

.z-button--primary {
  color: #FFFFFF;
  background-color: #409EFF;
  border-color: #409EFF;
}

.z-button--success {
  color: #FFFFFF;
  background-color: #67C23A;
  border-color: #67C23A;
}

.z-button--info {
  color: #FFFFFF;
  background-color: #909399;
  border-color: #909399;
}

.z-button--danger {
  color: #FFFFFF;
  background-color: #F56C6C;
  border-color: #F56C6C;
}

.z-button--warning {
  color: #FFFFFF;
  background-color: #E6A23C;
  border-color: #E6A23C;
}
